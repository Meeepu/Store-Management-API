{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "paths": {
            "utilities/*": ["./src/utilities/*"],
            "middlewares/*": ["./src/middlewares/*"]
        },
        "typeRoots": ["./src/@types"],
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
}
